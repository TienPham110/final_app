<div class="col-lg-6 photo_item d-flex justify-content-center">
                        <div class="card mb-3" style="max-width: 540px;">
                            <div class="row no-gutters photo_feed">
                                <div class="col-md-6 photo_feed_avatar" data-toggle="modal" data-target="#myModal">
                                    <%=image_tag(photo.image.url)%>
                                </div>
                              <div class="col-md-6">
                                <div class="card-body p-3 h-100">
                                    <div class="col p-0 mb-2">                                  
                                        <%= link_to(image_tag(photo.user.avatar.url, class: "rounded-circle" , style: "height: 30px; width:30px"),user_photos_path(user_id: photo.user.id)) %>
                                        <span class="font-weight-bold font-color text-center text-break p-xl-2"><%="#{photo.user.firstName} #{photo.user.lastName}"%></span>
                                    </div>
                                  <h6 class="card-title font-weight-bold title"><%=photo.title %></h6>
                                  <p class="card-text description"><%=photo.description %></p>
                                  <div class="d-flex justify-content-between mt-5">
                                      
                                      <% if photo.likes.pluck.include?(current_user.id)%>                                               
                                         <%=link_to unlike_path(id: photo.id), method: :post do%>
                                          <span class = "heart"><i class="fa fa-heart" aria-hidden="true" ></i> </span>                                        
                                          <span class = "like_number"><%=photo.like%></span>
                                          <%end%>
                                      <%else%>
                                        <%=link_to like_path(id: photo.id), method: :post do%>
                                          <span class = "heart"><i class="fa fa-heart-o" aria-hidden="true" ></i> </span>                                        
                                          <span class = "like_number"><%=photo.like%></span>
                                          <%end%>
                                      <% end %>
                                      
                                    <span class="card-text"><small class="text-muted"><%=photo.created_at%></small></span>
                                  </div>
                                </div>
                              </div>
                            </div>
                          </div>
                    </div>