<div class="col-md-6 col-xl-3 my-3">
                        <div class="row justify-content-center">
                            <div class="col col-11 py-3 photo_follow">
                                <div class="row photo_follow_avatar justify-content-center">
                                    <div class="col-10 text-center">
                                    <%= link_to(image_tag(follower.avatar.url, class: "rounded-circle", alt:"avatar" ),user_photos_path(user_id: follower.id)) %>
                                    </div>
                                </div>
                                <div class="row m-2">
                                    <div class="col text-center font-weight-bold"><%="#{follower.name}"%></div>
                                </div>
                                <div class="row mb-2 justify-content-center">
                                    <div class="col-4 text-center font-weight-bold">
                                        <div class="num_my_follow"><%=follower.photos.where(album_id:nil).count%></div>
                                        <small>PHOTOS</small>
                                    </div>
                                    <div class="col-4 text-center font-weight-bold">
                                        <div class="num_my_follow"><%=follower.albums.count%></div>
                                        <small>AlBUMS</small>
                                    </div>
                                </div>
                                <div class="row justify-content-center">
                                    <div class="col-6 text-center font-weight-bold">
                                        <span class="btn-group-toggle ml-auto py-1">
                                            
                                                <% if current_user.followings.include?(follower)%>                                               
                                                    <%=button_to "unfollow", toggleFollow_path(follow_id: follower.id), class:"btn btn-sm  m-0 p-0 btn_toggle_follow following",  method: :post, :data => {:confirm => 'Are you sure?'}%>
                                                <%else%>
                                                    <%=button_to "follow", toggleFollow_path(follow_id: follower.id),class:"btn  btn-sm  m-0 p-0 btn_toggle_follow follow", method: :post%>
                                                 <% end %>
                                            
                                        </span>
                                    </div>
                                </div>
                            </div>  
                        </div>
                    </div>