
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <%=javascript_pack_tag 'validation'%>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.2/dist/jquery.validate.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.12.0/additional-methods.js"></script>
    <%=javascript_pack_tag 'js'%>
    <%=stylesheet_link_tag 'style'%>
</head>
<body>
    <div class="container-fluid" style="background-color: #fdf5f5">
        <%=render 'shared/header'%>
        
        <div class="row">
            <div class="col my-1 p-0  text-center text-xl-left">
                <div class="btn-group-toggle left_col mx-5">
                  <%=button_to 'Feeds', feedPhoto_path, {method: "get", class:"btn font-weight-bold"}%>
                  <%=button_to 'Discovery', discovery_photo_path, {method: "get", class:"btn font-weight-bold"}%>  
                </div>          
            </div>
            <div class="col-xl-8 py-3 photo_feed_container">
                <div class="row justify-content-center">
                    <div class="col-11 font-weight-bold border-bottom py-3 px-0">
                        Edit User Profile
                    </div>
                </div>
                
                    <div class="col">
                    <%= form_for @user, html: { method: :put , id:"signup-form"} do |f| %>
                        <div class="row mt-4 justify-content-center user_photo_edit">
                            <div class="col-lg-4 ">
                                <div class="row"  style="border:1px  black">
                                    <div class="col-5 p-0 container_change" >
                                        <%= image_tag(@user.avatar.url, id:"avatar_my") %>   
                                        <label for="button_change_avatar">
                                            <div class="btn btn-sm font-weight-bold">CHANGE</div>
                                        </label>
                                        <%=f.file_field :avatar , id:"button_change_avatar", style:"display:none" %>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row mt-4 justify-content-center">
                            <div class="col-lg-4 p-0 font-weight-bold" style="color: #3c5a9a">
                                Basic information   
                            </div>
                        </div>
                        
                        <div class="row field">
                            <%= f.label :"First Name", class:"col-lg-4 p-2 text-lg-right font-weight-bold" %>
                            <div class="col-lg-4 p-0 form-group">
                                    <%= f.text_field :firstName, autofocus: true, autocomplete: "firstName" , class:"form-control"%>
                                    <div id="errorFname"></div>
                            </div>
                        </div>
                        <div class="row field">
                            <%= f.label :"Last Name", class:"col-lg-4 p-2 text-lg-right font-weight-bold" %>
                            <div class="col-lg-4 p-0 form-group">
                                <%= f.text_field :lastName, autofocus: true, autocomplete: "lastName" , class:"form-control"%>
                                <div id="errorLname"></div>
                            </div>
                        </div>
                        <div class="row field">
                            <%= f.label :Email, class:"col-lg-4 p-2 text-lg-right font-weight-bold" %>
                            <div class="col-lg-4 p-0 form-group">
                                    <%= f.email_field :email, autofocus: true, autocomplete: "email" , class:"form-control"%>
                                    <div id="errorEmail"></div>
                            </div>
                        </div>
                        <div class="row">
                            <%=f.label :"Current password", class:"col-lg-4 p-2 text-lg-right font-weight-bold"%>
                            <div class="col-lg-4 p-0">
                                <div class="form-group">
                                    <%= f.password_field :current_password, autocomplete: "current-password",  class:"form-control" , placeholder:'********'%>
                                    <div id="errorCurrPass"></div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4 p-2 text-lg-right font-weight-bold">
                                Active?
                            </div>
                            <div class="col-lg-4 px-0 py-2">
                                <%# <%=f.check_box :active%> %>
                            </div>
                        </div>
                        <div class="row justify-content-center field mt-2">
                            <div class="col-lg-4 p-0 actions">
                                <%= f.submit "Save",class:"btn btn-success font-weight-bold" %>
                            </div>
                            
                        </div>
                    <%end%>
                        
                        
                        <div class="row m-5"></div>
                    </div>
                
                    
            </div>
            <div class="col p-0 m-0"></div>
        </div>
        <div class="row w-100 my-2"></div>
    </div>
     
      
</body> 

</html>