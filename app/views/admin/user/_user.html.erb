<div class="row justify-content-center my-2">
    <div class="col-11">
        <div class="row">
            <div class="col-2 py-1 px-0 text-break">  
                <%=user.firstName %>  
            </div>                
            <div class="col-2 py-1 px-0 text-break">
                <%=user.lastName %>
            </div>
            <div class="col-3 py-1 px-0 text-break">   
                <%=user.email%>
            </div>
            <div class="col-3 py-1 px-0 text-break">
                <%=user.last_sign_in_at%>
            </div>
            <div class="col-2 p-0">  
                <div class="row">
                    <div class="col-lg-5">
                        <%=link_to 'Edit', edit_admin_user_path(user_id: user.id), method: :get,  class:"btn btn-success btn-sm m-0 w-100"%>
                    </div>
                    <div class="col-lg-7 text-center">
                        <%= link_to(admin_user_path(user_id: user.id), data: { confirm: "Are you sure?" }, method: :delete, :class => "btn btn-danger btn-sm w-100") do %>
                            <i class='fa fa-trash'></i> Delete 
                        <%end%>
                    </div>
                </div>
            </div>    
       </div>
    </div>             
</div>
                
                