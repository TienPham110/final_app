<div class="row justify-content-center">
                    <div class="col-11 font-weight-bold border-bottom">
                        <div class="row">
                            <div class="col-2 p-0">  
                                First Name  
                            </div>
                            <div class="col-2 p-0">
                                Last Name
                            </div>
                            <div class="col-3 p-0">   
                                Email 
                            </div>
                            <div class="col-3 p-0">
                                Last Login
                            </div>
                            <div class="col-2 p-0">    
                            </div>
                        </div>
</div>
 
                </div>
                <%users.each do |user|%>
                <div class="row justify-content-center my-2">
                    <div class="col-11">
                        <div class="row">
                            <div class="col-2 py-1 px-0 text-break">  
                                <%=user.firstName %>  
                            </div>
                            <div class="col-2 py-1 px-0 text-break">
                                <%=user.lastName %>
                            </div>
                            <div class="col-3 py-1 px-0 text-break">   
                                <%=user.email%>
                            </div>
                            <div class="col-3 py-1 px-0 text-break">
                                <%=user.last_sign_in_at%>
                            </div>
                            <div class="col-2 p-0">   
                                <%=link_to 'Edit', edit_user_path(id: user.id), method: :get,  class:"btn btn-success btn-sm m-0"%>
                                <%= link_to(user_path(id: user.id), data: { confirm: "Are you sure?" }, method: :delete, :class => "btn btn-danger btn-sm ml-4") do %>
                                <i class='fa fa-trash'></i> Delete 
                            <%end%>
                            </div>
                        </div>
                    </div>
 
                </div>
                <%end%>
                